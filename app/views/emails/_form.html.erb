<%= form_for email do |f| %>
  <% if email.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@email.errors.count, "error") %>.
    </div>
    <ul>
    <% @email.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>