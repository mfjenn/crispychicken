<!--modal!-->
<div class="modal fade" id="infoModal" tabindex="-1" role="dialog" arialabelledby="infoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="modal-title" id="infoModalLabel">Create Your Account!</h2>
      </div>
      <div class="modal-body">
       <h4>Let's start with your details...</h4>
       <%= form_for @user, :html => { :class => "form-inline" } do |f| %>
          <%= f.label :firstname, 'Name', :class => "bold" %><br>
	<div class="form-group">
          <%= f.text_field :firstname, :placeholder => "First Name", :class => "form-control" %>
	</div>
	<div class="form-group">
          <%= f.text_field :lastname, :placeholder => "Last Name", :class => "form-control" %>
        </div>
	<br><br>
        <div class="form-group">
          <%= f.label :email, "Email Address" %>
          <%= f.email_field :email, :placeholder => "email@example.com", :class => "form-control" %>
        </div>
	<br><br>
          <%= f.label :firstname, 'Password', :class => "bold" %><br>
	<div class="form-group">
          <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
	</div>
	<div class="form-group">
          <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control" %>
        </div>
	<br><br>
        <div class="form-group">
          <button class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
          <%= f.submit "Next", class: "btn btn-primary" %>
        </div>
	<a href="#">
	<div class="pull-right btn btn-primary facebook">
	  <span>Register with Facebook</span> <img src="/assets/facebook.png" width="25" align="right">
	</div>
	</a>
      <% end %>
    </div>
  </div>
</div>
